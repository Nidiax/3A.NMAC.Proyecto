@page
@model Work_IO_UI.Pages.Ordenes.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Detalles de las ordenes</h1>
<form class="mt-3" method="post" enctype="multipart/form-data">
    <div class="d-flex justify-content-end p-2">
        <button type="submit" name="adios" value="Editar" class="btn btn-primary m-2">Actualizar</button>
        <input type="button" value="Eliminar" class="btn btn-danger m-2" data-toggle="modal" data-target="#exampleModal" />
        <!--<button type="submit" class="btn btn-danger m-2" data-toggle="modal" data-target="#exampleModal">Eliminar</button>-->
       <!-- <input type="button" class="btn btn-info" onclick="DescargarPDF('reporte','reporte')" value="PDF" />-->
        <a asp-page="/Ordenes/Index" class="btn btn-light m-2">Regresar</a>
    </div>

    <div id="reporte">
        <input hidden asp-for="Orden.Id" />

        <div class="form-group">
            <label asp-for="Orden.EmpresaId">Empresa a la que pertenece:</label>
            <select class="custom-select" asp-for="Orden.EmpresaId" asp-items="@(new SelectList(Model.ListEmpresa,"Id","Nombre"))">
                <option>Seleccione una opción</option>
            </select>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Orden.AsesorId">Asesor al que pertenece:</label>
                <select class="custom-select" asp-for="Orden.AsesorId" asp-items="@(new SelectList(Model.ListAsesor,"Id","Nombre"))">
                    <option>Selecciona un asesor</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Orden.TipoVacante">Tipo de vacante que desea:</label>
                <input type="text" class="form-control" asp-for="Orden.TipoVacante" />
                <span class="text-danger" asp-validation-for="Orden.TipoVacante"></span>
            </div>
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">¡¡ADVERTENCIA!!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ¿Está seguro que desea eliminar esta orden?
                </div>
                <div class="modal-footer">
                    <button name="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" name="adios" value="Eliminar" class="btn btn-primary">Eliminar</button>
                </div>
            </div>
        </div>
    </div>

</form>

