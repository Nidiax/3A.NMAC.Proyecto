@page
@model Work_IO_UI.Pages.Empresas.EditModel
@{
    ViewData["Title"] = "Edit";
}

<script src="~/js/jspdf.debug.js"></script>
<script src="~/js/jquery-3.5.1.min.js"></script>

<h1 class="text-center">Detalles de la Empresa</h1>


<form class="mt-3" method="post" enctype="multipart/form-data">
    <div class="d-flex justify-content-end p-2">
        <button type="submit" name="adios" value="Editar" class="btn btn-primary m-2">Actualizar</button>
        <input type="button" value="Eliminar" class="btn btn-danger m-2" data-toggle="modal" data-target="#exampleModal" />
        <!--<button type="submit" class="btn btn-danger m-2" data-toggle="modal" data-target="#exampleModal">Eliminar</button>-->
       <!-- <input type="button" class="btn btn-info" onclick="DescargarPDF('reporte','reporte')" value="PDF" />-->
        <a asp-page="/Empresas/Index" class="btn btn-light m-2">Regresar</a>
    </div>

    <div id="reporte">
        <input hidden asp-for="Empresa.Id" />

        <div class="form-group">
            <label asp-for="Empresa.Nombre">Nombre de la empresa</label>
            <input class="form-control form-text" role="textbox" asp-for="Empresa.Nombre" />
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Empresa.Direccion">Dirección</label>
                <input type="text" class="form-control" asp-for="Empresa.Direccion" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Empresa.Numero">Numero</label>
                <input type="text" class="form-control" asp-for="Empresa.Numero" />
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Empresa.Correo">Correo electrónico</label>
                <input type="text" class="form-control" asp-for="Empresa.Correo" />
            </div>
        </div>

    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">¡¡ADVERTENCIA!!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    ¿Está seguro que desea eliminar esta empresa?
                </div>
                <div class="modal-footer">
                    <button name="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" name="adios" value="Eliminar" class="btn btn-primary">Eliminar</button>
                </div>
            </div>
        </div>
    </div>

</form>

