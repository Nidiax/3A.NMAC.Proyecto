                         <div class="form-row">
                            <label asp-for="Candidato.Id">Nacionalidad a la que pertenece:</label><br />
                        <select class="custom-select" asp-for="Nacionalidad.CandidatoId" asp-items="@(new SelectList(Model.ListNaci,"Id","Nombre"))">
                         <option>Selecciona la nacionalidad</option>
                         </select>

                        </div>

