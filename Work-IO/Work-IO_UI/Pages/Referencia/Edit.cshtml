@page
@model Work_IO_UI.Pages.Referencia.EditModel
@{
    ViewData["Title"] = "Edit";
}

<script src="~/js/jspdf.debug.js"></script>
<script src="~/js/jquery-3.5.1.min.js"></script>

<div id="customers">
    <h1 class="text-center">Detalles de la referencias</h1>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div class="d-flex justify-content-end p-2">
            <button type="submit" name="adios" value="Editar" class="btn btn-primary m-2">Actualizar</button>
            <!--<button type="submit" name="adios" value="Eliminar" class="btn btn-danger m-2">Eliminar</button>-->
            <input type="button" value="Eliminar" class="btn btn-danger m-2" data-toggle="modal" data-target="#exampleModal" />
            <!--<input type="button" onclick="DescargarPDF('customers','customers')" value="PDF" />-->
            <a asp-page="/Referencia/Index" class="btn btn-light m-2">Regresar</a>
        </div>
        <input hidden asp-for="Referencias.Id" />

        <div class="form-group">
            <label asp-for="Referencias.Id">Candidato a la que pertenece:</label>
            <select class="custom-select" asp-for="Referencias.CandidatoId" asp-items="@(new SelectList(Model.ListCandidatos,"Id","Nombre"))">
                <option>Selecciona al candidato</option>
            </select>
            <div class="form-group">
                <label asp-for="Referencias.Nombre">Nombre comercial:</label>
                <input type="text" class="form-control" asp-for="Referencias.Nombre" />
                <span class="text-danger" asp-validation-for="Referencias.Nombre"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Telefono">Teléfono:</label>
                <input type="text" class="form-control" asp-for="Referencias.Telefono" />
                <span class="text-danger" asp-validation-for="Referencias.Telefono"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Direccion">Dirección:</label>
                <input type="text" class="form-control" asp-for="Referencias.Direccion" />
                <span class="text-danger" asp-validation-for="Referencias.Direccion"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Nombre_informante">Nombre del informante:</label>
                <input type="text" class="form-control" asp-for="Referencias.Nombre_informante" />
                <span class="text-danger" asp-validation-for="Referencias.Nombre_informante"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Puesto_informante">Puesto del informante:</label>
                <input type="text" class="form-control" asp-for="Referencias.Puesto_informante" />
                <span class="text-danger" asp-validation-for="Referencias.Puesto_informante"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Puesto_candidato">Puesto del candidato:</label>
                <input type="text" class="form-control" asp-for="Referencias.Puesto_candidato" />
                <span class="text-danger" asp-validation-for="Referencias.Puesto_candidato"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Sueldo">Sueldo:</label>
                <input type="number" class="form-control" asp-for="Referencias.Sueldo" />
                <span class="text-danger" asp-validation-for="Referencias.Sueldo"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Inicio_laboral">Inicio laboral:</label>
                <input type="date" class="form-control" asp-for="Referencias.Inicio_laboral" />
                <span class="text-danger" asp-validation-for="Referencias.Inicio_laboral"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Fecha_separacion">Fecha de separación:</label>
                <input type="date" class="form-control" asp-for="Referencias.Fecha_separacion" />
                <span class="text-danger" asp-validation-for="Referencias.Fecha_separacion"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Puestos_anteriores">Puestos anteriores del candidato:</label>
                <input type="text" class="form-control" asp-for="Referencias.Puestos_anteriores" />
                <span class="text-danger" asp-validation-for="Referencias.Puestos_anteriores"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Motivos">Motivos de separación:</label>
                <input type="text" class="form-control" asp-for="Referencias.Motivos" />
                <span class="text-danger" asp-validation-for="Referencias.Motivos"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Tipo_contrato">Tipo de contrato:</label>
                <input type="text" class="form-control" asp-for="Referencias.Tipo_contrato" />
                <span class="text-danger" asp-validation-for="Referencias.Tipo_contrato"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Referencias.Fun_ultimopuesto">Función del último puesto:</label>
                <input type="text" class="form-control" asp-for="Referencias.Fun_ultimopuesto" />
                <span class="text-danger" asp-validation-for="Referencias.Fun_ultimopuesto"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="form-group">
                <label asp-for="Referencias.Desempenio">Desempeño:</label>
                <input type="text" class="form-control" asp-for="Referencias.Desempenio" />
                <span class="text-danger" asp-validation-for="Referencias.Desempenio"></span>
            </div>
            <div class="form-group">
                <label asp-for="Referencias.Observaciones">Observaciones:</label>
                <input type="text" class="form-control" asp-for="Referencias.Observaciones" />
                <span class="text-danger" asp-validation-for="Referencias.Observaciones"></span>
            </div>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">¡¡ADVERTENCIA!!</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ¿Está seguro que desea eliminar esta referencia?
                    </div>
                    <div class="modal-footer">
                        <button name="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                        <button type="submit" name="adios" value="Eliminar" class="btn btn-primary">Eliminar</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

